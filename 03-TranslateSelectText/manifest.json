{
    "manifest_version": 2,
    "name": "划词翻译",
    "version": "1.1",
    "description": "划词或双击即可翻译所选的内容",
    "content_scripts": [
        {
            "matches": ["http://*/*","https://*/*"],
            "js": ["js/hj.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "background": {
      "scripts": ["js/background.js"]
   },
	"browser_action": {
		"default_icon": "images/icon.png",
		"default_title": "划词翻译"
	},
    "permissions": 
    [ "tabs", "http://*/*", "https://*/*", "webRequest", "storage" ]
}
